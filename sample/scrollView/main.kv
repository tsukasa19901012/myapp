<ScrollBoxWidget@BoxLayout>:
    orientation: 'horizontal' # 横1列
    size_hint_x: None
    width: self.minimum_width
    Image:
        size_hint_x: None
        source: 'deck.png'
        width: 500
    Button:
        size_hint_x: None
        text: "2"
    Label:
        size_hint_x: None
        text: "3"
        width: 200
    Image:
        size_hint_x: None
        width: 300
