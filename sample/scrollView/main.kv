BoxLayout:
    orientation: 'vertical' # 縦1列

    Label:
        size_hint_y: 0.3
        text: 'ラベル'
    ScrollWidget:
        size_hint_y: 0.3
    ScrollWidgetBox:
        size_hint_y: 0.3

<ScrollWidget@ScrollView>:
    GridLayout:
        cols:2
        size_hint_y: None
        row_default_height: 200
        height: self.minimum_height
        Button:
            text: "1"
        Button:
            text: "2"
        Button:
            text: "3"
        Button:
            text: "4"
        Button:
            text: "5"
        Button:
            text: "6"
        Button:
            text: "7"
        Button:
            text: "8"

